@model Subject

<div class="row">
   <div class="col-md-6">
       <h1 class="text-danger mt-3">Add New Subject</h1>
       <hr>

<form class="m-1 p-1" method="post">
    <div class="form-group">
        <label class="text-dark" asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <label class="text-dark" asp-for="CreditHour">Credit Hour</label>
        <input asp-for="CreditHour" class="form-control" />
        <span asp-validation-for="CreditHour" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

</div>
   <div class="col-md-6">

</div>
</div>
