@model IEnumerable<Student>
     @TempData["message"],
   

  <div class="row">
      @foreach (var student in Model)
    {   
      <div class="col-md-3">
      <div class="box">
       <div class="details-img"><img src="~/uploads/@student.DisplayImage"  alt="my img" asp-append-version="true"/></div>
       <hr>
         <h4 class="text-center"> <a asp-action="Details" asp-route-id="@student.Id">@student.Name</a> </h4> 
         <hr>
          <div class="d-flex justify-content-center">
          <form asp-action="Delete" method="post" asp-route-id="@student.Id">
               <button  class="btn btn-primary">Delete</button>
              </form> 
                <div class="pl-2"><a asp-action="Edit" asp-route-id="@student.Id">
            <button type="button" class="btn btn-warning">Edit</button>
            </a> </div>
            </div>  
            </div>
            </div>

 }
</div>
 
